<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.android.audacity.fragments.HomeFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:padding="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text="Hottest App Of The Day!"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="View All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<View-->
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"/>-->
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/dimen_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/appIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@mipmap/ic_launcher" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/appIcon"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_16dp">

                    <TextView
                        android:id="@+id/appTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="App Name 1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/appSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developed By - Developer 1" />

                    <TextView
                        android:id="@+id/appDatePosted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/04/2018" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text="Challenges"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="View All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<View-->
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"/>-->
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/dimen_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/challengeIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@mipmap/ic_launcher" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/challengeIcon"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_16dp">

                    <TextView
                        android:id="@+id/challengeTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Challange 1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/challengeSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Challengo!!" />

                    <TextView
                        android:id="@+id/challengeDatePosted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/04/2018" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text="Quizzes"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="View All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<View-->
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"/>-->
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/dimen_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/quizIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@mipmap/ic_launcher" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/quizIcon"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_16dp">

                    <TextView
                        android:id="@+id/quizTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiz 1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/quizSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play The Best Quiz" />

                    <TextView
                        android:id="@+id/datePosted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/04/2018" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:textColor="@color/colorAccent"
                android:text="Results"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="View All"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <!--<View-->
            <!--android:background="@color/colorAccent"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"/>-->
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardCornerRadius="@dimen/dimen_8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/resultIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@mipmap/ic_launcher" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/resultIcon"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dimen_16dp">

                    <TextView
                        android:id="@+id/resultTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quiz 1 Result"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/resultSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Score -  100/200" />

                    <TextView
                        android:id="@+id/resultDatePosted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18/04/2018" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/dimen_8dp"
                    android:src="@drawable/right_arrow" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
